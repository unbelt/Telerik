<Window x:Class="RentalSystemUserInterface.EditMachinesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Machines" Height="140" Width="290">
    <Canvas Name="Root">
        <TextBlock Text="Name:" TextAlignment="Right" Canvas.Left="10" Canvas.Top="12" Width="40"/>
        <ComboBox Name ="NameCombo" Canvas.Left="60" Canvas.Top="10" Width="150" SelectionChanged="NameCombo_SelectionChanged"/>
        <TextBlock Text="Name:" TextAlignment="Right" Canvas.Left="10" Canvas.Top="42" Width="40"/>
        <TextBox Name="NameBox"  Canvas.Left="60" Canvas.Top="42" Width="90"/>
        <TextBlock Name="NoBlock" Text="No:" TextAlignment="Right" Canvas.Left="155" Canvas.Top="42" Width="20"/>
        <TextBox Name="NoBox"  Canvas.Left="180" Canvas.Top="42" Width="30"/>
        <Button Content="Add" Canvas.Left="220" Canvas.Top="42" Width="40" Click="AddButton_Click"/>
        <Button Content="Delete" Canvas.Left="220" Canvas.Top="10" Width="40" Click="DelButton_Click"/>
        <Button Content="Cancel" Width="40" Canvas.Left="220" Canvas.Top="69" Click="CancelButton_Click"/>
    </Canvas>
</Window>
